{
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"baseUrl": "./src/",
		"paths": {
			"@/*": [
				"*"
			],
			"@app/*": [
				"app/*"
			],
			"@styles/*": [
				"app/_styles/*"
			],
			"@entities/*": [
				"entities/*"
			],
			"@entities/posts/*": [
				"entities/posts/*"
			],
			"@pages/*": [
				"next-pages/*"
			],
			"@pages/main/*": [
				"next-pages/main/*"
			],
			"@shared/*": [
				"shared/*"
			],
			"@shared/ui/*": [
				"shared/ui/*"
			],
			"@widgets/*": [
				"widgets/*"
			],
			"@widgets/layouts/*": [
				"widgets/layouts/*"
			]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
